{
  "name": "tailwind-demo",
  "version": "1.0",
  "devDependencies": {
    "cross-env": "^7.0.3",
    "tailwindcss": "^3.2.1"
  },
  "scripts": {
    "create-config": "npx tailwindcss init",
    "build-css": "npx tailwindcss-cli@latest build -i ./src/style.css -o ./dist/style.css",
    "build-css-prod": "cross-env NODE_ENV=production npx tailwindcss-cli@latest build -i ./src/style.css -o ./dist/style.css"
  }
}
